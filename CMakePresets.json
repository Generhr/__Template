{
    "version": 7,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 27,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "ninja-multi-configure",
            "displayName": "Ninja-Multi",
            "description": "Configures the project using the vcpkg toolchain and generates Ninja project files with multi-configuration support.",
            "generator": "Ninja Multi-Config",
            "toolchainFile": "${sourceDir}/external/vcpkg/scripts/buildsystems/vcpkg.cmake",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_CONFIGURATION_TYPES": "Debug;Release;RelWithDebInfo",
                "CMAKE_DEFAULT_BUILD_TYPE": "Debug",
                "CMAKE_C_COMPILER": "clang",
                "CMAKE_CXX_COMPILER": "clang++",
                "ENABLE_DOXYGEN": "OFF",
                "ENABLE_CPPCHECK": "OFF",
                "ENABLE_CLANG_TIDY": "OFF",
                "ENABLE_INCLUDE_WHAT_YOU_USE": "OFF",
                "ENABLE_SANITIZE_ADDR": "OFF",
                "ENABLE_SANITIZE_UNDEF": "OFF",
                "ENABLE_SANITIZE_LEAK": "OFF",
                "ENABLE_SANITIZE_THREAD": "OFF",
                "ENABLE_IPO": "ON",
                "ENABLE_WARNINGS": "ON",
                "ENABLE_WARNINGS_AS_ERRORS": "OFF",
                "VERBOSE_OUTPUT": "OFF",
                "ENABLE_TESTING": "OFF",
                "USE_GOOGLE_MOCK": "OFF",
                "ENABLE_CODE_COVERAGE": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "ninja-multi-build-debug",
            "configurePreset": "ninja-multi-configure",
            "displayName": "Build (Debug)",
            "description": "Builds the project with Ninja Multi-Config in Debug configuration.",
            "configuration": "Debug",
            "cleanFirst": false,
            "jobs": 2
        },
        {
            "name": "ninja-multi-build-release",
            "configurePreset": "ninja-multi-configure",
            "displayName": "Build (Release)",
            "description": "Builds the project with Ninja Multi-Config in Release configuration.",
            "configuration": "Release",
            "jobs": 2
        }
    ],
    "testPresets": [
        {
            "name": "ninja-multi-test-debug",
            "configurePreset": "ninja-multi-configure",
            "configuration": "Debug",
            "displayName": "Test (Debug)",
            "execution": {
                "noTestsAction": "error",
                "scheduleRandom": true,
                "stopOnFailure": true,
                "jobs": 2
            },
            "output": {
                "outputOnFailure": true,
                "verbosity": "default"
            }
        },
        {
            "name": "ninja-multi-test-release",
            "configurePreset": "ninja-multi-configure",
            "configuration": "Release",
            "displayName": "Test (Release)",
            "execution": {
                "noTestsAction": "error",
                "scheduleRandom": true,
                "stopOnFailure": true,
                "jobs": 2
            },
            "output": {
                "outputOnFailure": true,
                "quiet": true
            }
        }
    ]
}
